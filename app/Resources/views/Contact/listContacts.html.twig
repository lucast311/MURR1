{% extends 'base.html.twig' %}

{% block title %}All Contacts{% endblock %}

{% block stylesheets %}
<style>
table {
    border-collapse: collapse;
}
table, th, td {
    border: 1px solid black;
}
</style>
{% endblock %}

{% block body %}

<a href="{{ path('contact_add') }}" hint="Add a new contact">Add a new contact</a>

<div>
    {% if contacts is empty %}
    <h2>No contacts in database</h2>
    {% else %}

    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Organization</th>
            <th>Primary Phone</th>
            <th>View</th>
        </tr>

        {% for contact in contacts %}
        <tr>
            <td>{{contact.firstName}}</td>
            <td>{{contact.lastName}}</td>
            <td>{{contact.organization}}</td>
            <td>{{contact.primaryPhone}}</td>
            <td><a href="{{ path('contact_view', {'contactId':contact.id}) }}">View</a></td>
        </tr>
        {% endfor %}

    </table>

    {% endif %}
</div>

{% endblock %}
