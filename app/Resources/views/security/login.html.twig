<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css"/>
        <title>Login | M.U.R.R.</title>
    </head>
    <body>

        <div class="ui text container">
            <div class="ui bottom attached segment">
                 {% if error %}
                <div class="ui message">
                    <dic class="ui list">
                        <div class="item"> <i class="warning sign icon"></i>{{ error.messageKey|trans(error.messageData, 'security') }} </div>
                    </dic>
                </div>
                {% endif %}
                <form action="{{ path('login') }}" name="login" method="post" class="ui form">
                    <h2>Log In</h2>
                    <div class="field">
                        <label for="username">User Name:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" />
                    </div>

                    <div class="field">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" />
                    </div>

                    <button class="ui primary button" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </body>
</html>
