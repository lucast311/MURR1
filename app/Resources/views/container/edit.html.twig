{% extends 'base.html.twig' %}


{% block javascripts %}
{# include jQuery to make the search script work #}
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>    
{# include the PropertySearchPopup javascript and the select2 file #}
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script type="text/javascript" src="{{ asset('JavaScript/PropertySearchPopup.js') }}" class="popupjs" data-path="{{ path('property_search', { 'isPopup': "true" }) }}"></script>
{% endblock %}


{% block body %}
    <h1>Edit Container{% if not invalid_id_error %} {{container.containerSerial}}{% endif %}</h1>
    
{% if invalid_id_error %}
    <h2>Container does not exist</h2>
{% else %}
    {% form_theme edit_form 'form_table_layout.html.twig'  %}
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Save" />
    {{ form_end(edit_form) }}
{% endif %}


    <ul>
        <li>
            <a href="{{ path('container_index') }}">Back to the list</a>
        </li>
        {% if not invalid_id_error %}
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
