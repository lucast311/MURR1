{% extends 'base.html.twig' %}
{% block javascripts %}

<script type="text/javascript" src="{{ asset('JavaScript/PropertySearchPopupSemantic.js') }}" class="popupjs" data-path="{{ path('property_search', { 'isPopup': "true" }) }}"></script>
<script>
    $(function ()
    {
        var propertySelect = $("#appbundle_communication_property")
        propertySelect.after("<input class='ui button' id='advanced_property_search_popup' value='Advanced Search' type='button'/>");
        initialize(propertySelect);
    });
</script>
{% endblock %}
{% block body %}
    <div id="wrapper">
        <div id="container">
            <h2>Add Communication</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
			<div class="field"><button type="submit" id="communication_add" name="communication[add]" class="ui button">Add</button></div>
            {{ form_end(form) }}

            {% if added is defined and added %}
                Communication added successfully
            {% endif %}
        </div>
    </div>
{% endblock %}

